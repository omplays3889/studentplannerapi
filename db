
CREATE DATABASE my_planner_db;
USE my_planner_db;

CREATE TABLE tbl_users (
    id INT IDENTITY(1, 1) PRIMARY KEY,
    last_name varchar(255),
    first_name varchar(255),
    email_id varchar(255),
    org varchar(255),
    user_type varchar(255),
    usa_state varchar(255)
);

CREATE TABLE tbl_user_assignment_mappings (
    assignment_id INT ,
    user_email_id varchar(255),
    CONSTRAINT PK_user_assignment_mapping PRIMARY KEY (assignment_id,user_email_id)
);


CREATE TABLE tbl_user_class_mappings (
    class_id INT ,
    user_email_id varchar(255),
    CONSTRAINT PK_user_class_mapping PRIMARY KEY (class_id,user_email_id)
);

CREATE TABLE tbl_classes (
    id BIGINT IDENTITY(1, 1) PRIMARY KEY,
    teacher_id INT,
    class_name varchar(255),
    teacher_email_id varchar(255),
    email_ids varchar(MAX)
);

CREATE TABLE tbl_assignments (
    id BIGINT IDENTITY(1, 1) PRIMARY KEY,
    owner_email_id varchar(255),
    class_name varchar(255),
    class_id INT,
    title VARCHAR(255),
    details VARCHAR(8000),
    duedate varchar(255)
);

