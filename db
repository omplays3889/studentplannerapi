CREATE TABLE tbl_users (
    id SERIAL PRIMARY KEY,
    last_name VARCHAR(255),
    first_name VARCHAR(255),
    email_id VARCHAR(255),
    org VARCHAR(255),
    user_type VARCHAR(255),
    usa_state VARCHAR(255)
);
commit;

CREATE TABLE tbl_user_assignment_mappings (
    assignment_id INT NOT NULL,
    user_email_id VARCHAR(255) NOT NULL,
    CONSTRAINT PK_user_assignment_mapping PRIMARY KEY (assignment_id, user_email_id)
);
commit;

CREATE TABLE tbl_user_group_mappings (
    group_id INT ,
    user_email_id varchar(255),
    CONSTRAINT PK_user_group_mapping PRIMARY KEY (group_id,user_email_id)
);
commit;

CREATE TABLE tbl_groups (
    id BIGSERIAL PRIMARY KEY,
    teacher_id INT,
    group_name VARCHAR(255),
    teacher_email_id VARCHAR(255),
    email_ids TEXT
);
commit;

CREATE TABLE tbl_assignments (
    id BIGSERIAL PRIMARY KEY,
    owner_email_id varchar(255),
    group_name varchar(255),
    group_id INT,
    title VARCHAR(255),
    details VARCHAR(8000),
    duedate varchar(255)
);
commit;

